<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="WebGym">
	
	<class>br.unitins.webgyn.model.Aluno</class>
		<class>br.unitins.webgyn.model.Avaliacao</class>
		<class>br.unitins.webgyn.model.Cep</class>
		<class>br.unitins.webgyn.model.Cidade</class>
		<class>br.unitins.webgyn.model.DefaultEntity</class>
		<class>br.unitins.webgyn.model.Endereco</class>
		<class>br.unitins.webgyn.model.Equipamento</class>
		<class>br.unitins.webgyn.model.Exercicio</class>
		<class>br.unitins.webgyn.model.Instrutor</class>
		<class>br.unitins.webgyn.model.Mensalidade</class>
		<class>br.unitins.webgyn.model.Pessoa</class>
